

install.packages('RMySQL')
require(RMySQL)

con <- dbConnect(RMySQL::MySQL(), host = "localhost",dbname="rdata",user = "root", password = "")

users <- dbReadTable(con, "users") 

print (users);

dbSendQuery(con,
            "insert into users(id,name,age,status) values(null,'aleem','22','Active')"
)

dbSendQuery(con,
            "UPDATE users SET name = 'tameez nawab', `age` = '29', `status` = 'In-active' WHERE users.id = 4;"
)

dbSendQuery(con,
            "DELETE FROM users WHERE users.id = 3"
)

install.packages("shiny")
library(shiny)

